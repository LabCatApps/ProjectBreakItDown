<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundPrimaryLilac"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/new_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textColor="@color/Purple_dark"/>

    <EditText
        android:id="@+id/task_name_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/new_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textColor="@color/Purple_dark"/>

    <EditText
        android:id="@+id/task_description_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/new_task_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Priority:"
        android:textColor="@color/Purple_dark"/>

    <EditText
        android:id="@+id/task_priority_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/new_task_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Length (mins):"
        android:textColor="@color/Purple_dark"/>

    <EditText
        android:id="@+id/task_length_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/new_task_duedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due date:"
        android:textColor="@color/Purple_dark" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"/>

</LinearLayout>